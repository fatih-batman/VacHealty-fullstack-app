<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:id="@+id/rl2" >

        <TextView
            android:id="@+id/welcomeUser"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:background="#aaaa"
            android:gravity="center"
            android:text="@string/Welcome"
            android:textColor="#110101"
            android:textSize="30sp"
            android:textStyle="bold" />
        <!--
         android:text="@string/Welcome"
         android:text="@string/Welcome"
         android:layout_marginTop="375dp"
         android:layout_marginTop="300dp"
         android:layout_marginTop="225dp"
         android:layout_marginTop="150dp"

        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_send_vac"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:hint="Vaccines"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/btn_send_covid_process"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"

                    android:hint="Covid Process"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/btn_send_statistics"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"

                    android:hint="Statistics"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/btn_send_setting"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:hint="Setting"
                    android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical" >
                <Button
                    android:id="@+id/btn_send_log_out"
                    android:layout_width="374dp"
                    android:layout_height="wrap_content"
                    android:hint="Log out"
                    android:textSize="20sp" />
        </LinearLayout>
</LinearLayout>